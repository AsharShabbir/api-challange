              d="M67.8817 113.815H37.392C35.5546 113.666 34.1642 112.077 34.3132 110.24C34.4125 108.601 35.7533 107.26 37.392 107.161H67.8817C69.719 107.31 71.1094 108.899 70.9604 110.736C70.8115 112.375 69.5204 113.716 67.8817 113.815Z"
              fill="#0C2340" />
          </svg>

          <div class="header-enterprise-title">
            <div class="header-enterprise-title-h1">
              Bulir Technology, Lda
            </div>
            <div class="header-enterprise-title-location">
              R. Luther King 89, Maculusso - Luanda
            </div>
          </div>
        </div>
      </div>

      <!-- bill to container -->
      <div style="display: flex; flex-direction: row; justify-content: space-between;">
        <div class="bill-to-container">
          <div class="bill-to-header">Para</div>
          <address class="bill-to-address">
            Transação# <%= invoiceNum %> <br>
            <%= billTo %> <br>
            <%= billToAddress %>
          </address>
        </div>

        <div class="bill-to-container">
          <div class="bill-to-header" style="opacity: 0;">Para</div>
          <div class="bill-subtotal">
            <div class="subtotal">Data:</div>
            <div class="subtotal-value"><%= invoiceDate %></div>
          </div>
        </div>
      </div>

      <!-- bill table -->
      <div class="bill-table-container">
        <div class="bill-table-sub-container">
          <div class="bill-table-sub-sub-container">
            <table class="bill-table">
              <thead class="bill-thead">
                <tr>
                  <th class="bill-th">Qtd.</th>
                  <th class="bill-th-price">Descrição</th>
                  <th class="bill-th-price">Preço Unitario</th>
                  <th class="bill-th">Preço</th>
                </tr>
              </thead>
              <tbody class="bill-tbody">
                <tr>
                  <td class="bill-tbody-td">
                    <div><%= qty %></div>
                  </td>
                  <td class="bill-tbody-td">
                    <div style="width: 300px; word-wrap: break-word;overflow-wrap: break-word;white-space: normal;white-space: nowrap;white-space: pre;white-space: pre-wrap;word-break: break-all;word-break: keep-all;word-break: normal;
                    "><%= description %></div>
                  </td>
                  <td class="bill-tbody-td">
                    <div><%= unityPrice %></div>
                  </td>
                  <td class="bill-tbody-td">
                    <div><%= price %></div>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <!-- bill footer -->
      <div class="bill-tfooter">
        <div class="bill-subtotal">
          <div class="subtotal">Subtotal:</div>
          <div class="subtotal-value"><%= subtotal %></div>
        </div> 

        <div class="bill-subtotal">
          <div class="subtotal">IVA 14%:</div>
          <div class="subtotal-value"><%= iva %></div>
        </div>

        <div class="bill-total">
          <div class="total">TOTAL:</div>
          <div class="total"><%= total %></div>
        </div>

      </div>
    </div>
  </div>
</body>

</html>